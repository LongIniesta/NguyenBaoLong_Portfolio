@page
@model RazorPage.Pages.Admin.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "LayoutAdmin";
}

<div class="d-flex justify-content-between">
    <a asp-page="./Index">
        <img src="~/images/back-icon-3.png" style="padding-left: 30px;" />
    </a>
    <div>
    </div>
    <div>
    </div>
</div>
<div class="d-flex justify-content-center">
    <span class="mx-2 span-custom"><a style="font-weight: 500; color: #5A5A5A; text-decoration: none;" asp-page="./Index">Accounts</a></span>
    <span> / </span>
    <span class="mx-2" style="font-weight: 500; color: #000;">Details</span>
</div>
<h1 class="text-center mt-5 mb-5">USER INFORMATION</h1>


<hr />
<div class="card shadow p-3 mb-5 bg-white rounded" style="margin: 0 200px 0 200px;">
    <div style="padding: 30px 30px 30px 30px;">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.User.UserName" class="control-label" style="font-weight: bold;"></label>
                    <input disabled asp-for="@Model.User.UserName" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.User.Email" class="control-label" style="font-weight: bold;"></label>
                    <input disabled asp-for="@Model.User.Email" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Password" class="control-label" style="font-weight: bold;"></label>
                <input disabled asp-for="@Model.User.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Address" class="control-label" style="font-weight: bold;"></label>
                <input disabled asp-for="@Model.User.Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.PhoneNumber" class="control-label" style="font-weight: bold;"></label>
                <input disabled asp-for="@Model.User.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Birthday" class="control-label" style="font-weight: bold;"></label>
                <input disabled asp-for="@Model.User.Birthday" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Role" class="control-label" style="font-weight: bold;"></label>
                <input disabled asp-for="@Model.User.Role" class="form-control" />
            </div>
            <div class="form-group">
                @{
                    if (Model.User.Status == true)
                    {
                        <label style="font-weight: bold;">Status</label>
                        <input disabled value="Active" class="form-control" />
                    }
                    else
                    {
                        <label style="font-weight: bold;">Status</label>
                        <input disabled value="Inactive" class="form-control" />
                    }
                }
            </div>

        </form>
        <div class="d-flex justify-content-center">
            <button class="btn-primary rounded-pill px-4 py-2"><a asp-page="./Edit" asp-route-id="@Model.User.UserId" style="color: #fff; text-decoration: none; font-weight: 600;">Edit</a></button>
        </div>
    </div>
</div>
