@page
@model RazorPage.Pages.ShoppingComboModel
@{
    if (SessionHelper.checkPermission(HttpContext.Session, "customer"))
    {
        Layout = "LayoutCustomer";
    }
}

<h1 class="text-center mt-5 mb-5" style="color: #fff; font-weight: 700;">SHOPPING MALL</h1>

<div class="card shadow p-3 mb-5 bg-white rounded" style="margin: 0 200px 0 200px;">
    <form method="post">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="strsearch" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <input type="submit" class="btn btn-dark" name="search" value="SEARCH" />
            </div> 
        </div>
    </form>
    <div class="row" style="padding: 30px 30px 30px 30px;">
        @foreach (var combo in Model.Combo)
        {
            <div class="col-6 col-md-4">
                <div class="card" style="width: 100%; padding-bottom: 40px;">
                    <img class="card-img-top" src="~/images/combo.png" />
                    <div class="card-body">
                        <h5 class="card-title">@combo.ComboName</h5>
                        <p class="card-text" style="font-weight: 500; color: orangered;">@combo.Price đ</p>
                        <p class="card-text">@combo.ComboDescription</p>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn-primary rounded-pill px-4 py-2"><a asp-page="./Customer/CustomerCart" asp-page-handler="BuyNow" asp-route-id="@combo.ComboId" asp-route-type="combo" style="color: #fff; text-decoration: none; font-weight: 600;">ADD TO CART</a></button>
                    </div>
                    <div class="d-flex justify-content-center" style="margin-top: 15px;">
                        <button class="btn-secondary rounded-pill px-4 py-2"><a asp-page="./ComboDetailView" asp-route-id="@combo.ComboId" style="color: #fff; text-decoration: none; font-weight: 600;">SEE DETAILS</a></button>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
