@page
@model RazorPage.Pages.Staff.Combos.AddComboDetailModel
@{
    Layout = "LayoutStaff";
}

<div class="d-flex justify-content-between">
    <a asp-page="Index">
        <img src="~/images/back-icon-3.png" style="padding-left: 30px;" />
    </a>
    <div>
    </div>
    <div>
    </div>
</div>
<div class="d-flex justify-content-center">
    <span class="mx-2 span-custom"><a style="font-weight: 500; color: #5A5A5A; text-decoration: none;" asp-page="Index">Combos</a></span>
    <span> / </span>
    <span class="mx-2 span-custom"><a style="font-weight: 500; color: #5A5A5A; text-decoration: none;" asp-page="./Create">Create</a></span>
    <span> / </span>
    <span class="mx-2" style="font-weight: 500; color: #000;">Create</span>
</div>
<h3 class="text-center mt-5 mb-5">PRODUCT LIST</h3>

<hr />

<div class="card shadow p-3 mb-5 bg-white rounded" style="margin: 0 200px 0 200px;">
    <div class="row" style="padding: 30px 30px 30px 30px;">
        @foreach (var product in Model.Products)
        {
            String imgLink = product.ImageLink;
            <div class="col-6 col-md-4">
                <div class="card" style="width: 100%; padding-bottom: 40px;">
                    <img class="card-img-top" src="~/uploads/@imgLink" />
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">@product.ProductDescription</p>
                        <p class="card-text" style="font-weight: 500">Supplier</p>
                        <p class="card-text">@product.Supplier.SupplierName</p>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn-primary rounded-pill px-4 py-2"><a asp-page="./Create" asp-page-handler="BuyNow" asp-route-id="@product.ProductId" style="color: #fff; text-decoration: none; font-weight: 600;">ADD</a></button>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
