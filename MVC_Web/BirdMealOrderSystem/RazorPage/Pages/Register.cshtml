@page
@model RazorPage.Pages.RegisterModel
@{
}

<link rel="stylesheet" type="text/css" href="css/Login.css" />
<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <h4 class="mt-1 mb-5 pb-1">Bird Meal System Order</h4>
                                </div>

                                <form method="post">
                                    <p>Create an account</p>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.registerInfo.Phone"></label>
                                        <input type="text" asp-for="@Model.registerInfo.Phone" class="form-control"
                                               placeholder="Phone number" />
                                        <span asp-validation-for="@Model.registerInfo.Phone" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.registerInfo.Email"></label>
                                        <input type="email" asp-for="@Model.registerInfo.Email" class="form-control"
                                               placeholder="Email" />
                                        <span asp-validation-for="@Model.registerInfo.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.registerInfo.Password"></label>
                                        <input type="password" asp-for="@Model.registerInfo.Password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="@Model.registerInfo.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.registerInfo.Confirmpassword"></label>
                                        <input type="password" asp-for="@Model.registerInfo.Confirmpassword" class="form-control" placeholder="Confirm password" />
                                        <span asp-validation-for="@Model.registerInfo.Confirmpassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.registerInfo.Name"></label>
                                        <input type="text" asp-for="@Model.registerInfo.Name" class="form-control"
                                               placeholder="Name" />
                                        <span asp-validation-for="@Model.registerInfo.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.registerInfo.Address"></label>
                                        <input type="text" asp-for="@Model.registerInfo.Address" class="form-control"
                                               placeholder="Country" />
                                        <span asp-validation-for="@Model.registerInfo.Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.registerInfo.Birthday"></label>
                                        <input type="date" asp-for="@Model.registerInfo.Birthday" class="form-control" />
                                        <span asp-validation-for="@Model.registerInfo.Birthday" class="text-danger"></span>
                                    </div>
                                    <h5 class="text-danger">@Model.Message</h5>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                            Create
                                        </button>
                                    </div>
                                    
                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Welcome</h4>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

